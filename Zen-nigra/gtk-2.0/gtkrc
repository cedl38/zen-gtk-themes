# Dark gtk-color-scheme:
gtk-color-scheme = "base_color:#EEEEEE\nfg_color:#D0C9B1\ntooltip_fg_color:#000000\nselected_bg_color:#4ED9D2\nselected_fg_color:#000000\ntext_color:#101010\nbg_color:#3C3C3C\ntooltip_bg_color:#FFF7BF"
gtk-color-scheme = "button_prelight:#246662"

include "gtk-widgets.rc"

style "titlebar-nigra" = "titlebar"
{
    fg[SELECTED] = mix(0.26, @bg_color, "#FFFFFF")
}

widget "xfwm"                      style "titlebar-nigra"
widget "xfwm4-tabwin*"             style "titlebar-nigra"
class "MetaFrames"                 style "titlebar-nigra"
widget_class "MetaFrames"          style "titlebar-nigra"

style "notebook-nigra" = "notebook"
{
	bg[ACTIVE]   = shade(1.1, @bg_color) # Unfocused tab background.
	bg[NORMAL]   = shade(1.3, @bg_color) # Tab background.
	bg[SELECTED]   = @button_prelight

	engine "clearlooks"
	{
		radius = 2.0 # Roundness of menu items.
		style = CLASSIC
		contrast = 1.1
	}
}

widget_class "*.GtkNotebook"       style "notebook-nigra"
class "*.GtkNotebook"              style "notebook-nigra"
