# Maintainer: Ced <cedl38@gmail.com>

pkgname=zen-gtk-themes
pkgver=0.6.3
pkgrel=1
pkgdesc="A gtk2/gtk3 theme for Xfce and gnome that attempt to keep it simple, consistent and being visually appealing."
arch=('any')
url="http://xfce-look.org/content/show.php/Zen+suite?content=149883"
license=('GPL3')
groups=('xfce')
depends=('gtk2' 'gtk-engines' 'gtk-engine-murrine')
optdepends=('alinea-themes' 'mini-xfwm4-theme' 'gnome-themes-extras: Foxtrot icons' 'xfce4-notifyd' 'gtk3>=3.4.1')

source=("https://github.com/cedl38/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('288330a6a0368b068b9e3f6e1c1b7e48f5028f9876b31d8f1a999d11fe6e5416')

build() {
  cd $srcdir/$pkgname'-'$pkgver
  install -d -m755 $pkgdir/usr/share/themes
  cp -r Zen* $pkgdir/usr/share/themes || return 1
}
