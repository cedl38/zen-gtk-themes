# Maintainer: Ced <cedl38@gmail.com>

pkgname=zen-gtk-themes
pkgver=0.6.0
pkgrel=1
pkgdesc="A gtk2/gtk3 theme for Xfce and gnome that attempt to keep it simple, consistent and being visually appealing."
arch=('any')
url="http://xfce-look.org/content/show.php/Zen?content=149883&PHPSESSID=fa1bc7de717abe6d605dc3280b2db89d"
license=('GPL')
groups=('xfce')
depends=('gtk2>=2.24' 'gtk-engines' 'gtk-engine-murrine')
optdepends=('gnome-themes-extras: Foxtrot icons' 'xfwm4>=4.8'  'xfce4-notifyd>=0.2' 'gtk3>=3.4.1')

license=('GPL3')
source=("https://github.com/cedl38/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('1c498a564402abd399c3d10b027ecca33f7c31d7f26c1270a9db600ba996bf6d')

build() {
  cd $srcdir/$pkgname'-'$pkgver
  install -d -m755 $pkgdir/usr/share/themes
  cp -r Zen* $pkgdir/usr/share/themes || return 1
}
